extends layout

block content
  .container
    .row
      .col-md-6.offset-md-3
        h1.text-center Enter Your Steam ID
        form(action="/wishlist", method="POST")
          .form-group
            label(for="steamId") Steam ID:
            input#steamId.form-control(type="text", name="steamID", placeholder="Enter your Steam ID", required)
          .form-group.text-center
            button.btn.btn-primary(type="submit") Go to Wishlist
